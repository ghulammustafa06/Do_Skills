<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SocalMediaMarketingActivity">



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social Media Marketing"
                android:textSize="27sp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/purple"
                android:textStyle="bold">

            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/socialmedia"
                android:layout_margin="20dp"
                android:fontFamily="@font/merriweathersansmedium"
                android:justificationMode="inter_word">
            </TextView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Software Used"
                android:textSize="27sp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textColor="@color/purple"
                android:textStyle="bold">

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="80dp"
                    android:layout_marginStart="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hotsuite">
                </de.hdodenhof.circleimageview.CircleImageView>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="80dp"
                    android:layout_marginStart="50dp"
                    android:layout_height="80dp"
                    android:src="@drawable/buffer">
                </de.hdodenhof.circleimageview.CircleImageView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:layout_marginStart="85dp"
                    android:text="Hootsuite"
                    android:fontFamily="@font/merriweathersansmedium"
                    android:justificationMode="inter_word">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:layout_marginStart="225dp"
                    android:text="Buffer"
                    android:fontFamily="@font/merriweathersansmedium"
                    android:justificationMode="inter_word">
                </TextView>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="80dp"
                    android:layout_marginStart="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sprout">
                </de.hdodenhof.circleimageview.CircleImageView>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="80dp"
                    android:layout_marginStart="50dp"
                    android:layout_height="80dp"
                    android:src="@drawable/socialbee">
                </de.hdodenhof.circleimageview.CircleImageView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:layout_marginStart="65dp"
                    android:text="Sprout Social"
                    android:fontFamily="@font/merriweathersansmedium"
                    android:justificationMode="inter_word">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:layout_marginStart="210dp"
                    android:text="SocialBee"
                    android:fontFamily="@font/merriweathersansmedium"
                    android:justificationMode="inter_word">
                </TextView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/canva">

                </de.hdodenhof.circleimageview.CircleImageView>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="80dp"
                    android:layout_marginStart="50dp"
                    android:layout_height="80dp"
                    android:src="@drawable/google">
                </de.hdodenhof.circleimageview.CircleImageView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:layout_marginStart="95dp"
                    android:text="Canva"
                    android:fontFamily="@font/merriweathersansmedium"
                    android:justificationMode="inter_word">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:layout_marginStart="195dp"
                    android:text="Google Analytic"
                    android:fontFamily="@font/merriweathersansmedium"
                    android:justificationMode="inter_word">
                </TextView>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>